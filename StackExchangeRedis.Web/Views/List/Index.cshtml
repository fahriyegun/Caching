@model List<string>
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>

</form>

@foreach(var item in Model){
    
    <h2>@item <a asp-controller="List" asp-action="Remove" asp-route-item = "@item">Sil</a></h2>
}